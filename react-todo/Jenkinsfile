pipeline {
    agent any

    environment {
        IMAGE_NAME = "yatindra-krishna/node-app"
        PORT = "5173"
    }

    stages {
        stage('Checkout Code') {
            steps {
                script {
                    git url: "https://github.com/yatindra-krishna/Liaplus-ai.git", branch: "main"
                }
            }
        }

        stage('Run Container') {
            steps {
                sh "cd react-todo/ && docker-compose down && docker-compose up -d"
            }
        }

        // Updated SonarQube Analysis Stage
        stage('SonarQube Analysis') {

            steps {
                           sonar-scanner \
                      -Dsonar.projectKey=Node-todo-app \
                      -Dsonar.sources=. \
                      -Dsonar.host.url=http://98.70.55.30:9000 \
                      -Dsonar.token=sqp_12a2b8c6182396f42337eddb9946b1d960a03a36
                }
            }
        }
    }

    post {
        success {
            echo "Deployment Successful!"
        }
        failure {
            echo "Build Failed!"
        }
    }
}
